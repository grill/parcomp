  //memset((void *) ops, 0, sizeof(int)*omp_get_max_threads());

  arr = gen_int_array(value, size);
  sync;
  cp_begin = Cilk_user_critical_path;
  wk_begin = Cilk_user_work;
  tm_begin = Cilk_get_wall_time();

